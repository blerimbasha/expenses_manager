{% extends 'security/base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4" style="padding-top: 123px;">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="text-center">
                            <h3><i class="fa fa-lock fa-4x"></i></h3>
                            <h2 class="text-center">{{ 'password.reset'|trans }} ?</h2>
                            <p>{{ 'password.reset_here'|trans }} .</p>
                            <div class="panel-body">
                                {{ form_start(form) }}
                                {{ form_row(form.email) }}
                                {{ form_rest(form) }}
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


