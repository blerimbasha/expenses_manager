{% extends 'security/login.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4 text-center">
                <h1 class="text-center login-title">{{ 'econnect'|trans }}</h1>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        {{ 'user.changepassword'|trans }}
                    </div>
                    <div class="panel-body">
                        {{ 'user.second_message'|trans }}
                    </div>
                    <div class="account-wall">
                        {{ form_start(form) }}
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
