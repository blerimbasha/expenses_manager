{% extends 'security/base.html.twig' %}
{% block title %}
    {{ parent() }} {{ 'new.user'|trans }}
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h2>{{ 'user.register_form'|trans }}</h2>
            {{ form_start(form) }}
                {{ form_widget(form) }}
            <div class="row">
                <div class="col-sm-6">
                    <a href="{{ path('login') }}" class="btn btn-default btn-block">{{ 'cancel'|trans }}</a>
                </div>
                <div class="col-sm-6">
                    <button class="btn btn-success btn-block" type="submit">{{ 'submit'|trans }}</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
